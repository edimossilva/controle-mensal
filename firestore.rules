rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Owner has full access to their own data
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared users can read/write owner's data (except the sharedEmails collection)
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null
        && collection != 'sharedEmails'
        && exists(/databases/$(database)/documents/users/$(userId)/sharedEmails/$(request.auth.token.email));
    }

    // Reverse index: readable by the email owner, writable by the data owner
    match /shares/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow create: if request.auth != null
        && request.resource.data.ownerUid == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.ownerUid == request.auth.uid
        && request.resource.data.ownerUid == request.auth.uid;
      allow delete: if request.auth != null
        && resource.data.ownerUid == request.auth.uid;
    }
  }
}
